<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/glueBetBlue</item>
        <item name="colorControlNormal">@color/glueBetBlue</item>
        <item name="colorControlActivated">@color/glueBetBlue</item>
    </style>

    <style name="DateDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/glueBetBlue</item>
    </style>

</resources>
